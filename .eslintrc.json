{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["backend/**/*.js", "microservices/**/*.js", "gateway/**/*.js"],
      "env": {
        "browser": false,
        "node": true
      },
      "extends": ["eslint:recommended", "prettier"]
    }
  ]
}
